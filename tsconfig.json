{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "es5",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "removeComments": false
  },
  "include": ["./**/*"],
  "exclude": ["examples/**"]
}
